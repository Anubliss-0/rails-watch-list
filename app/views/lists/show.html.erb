<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<h1><%= @list.name %></h1>
<%# show the inividual list details %>
<%= link_to "Back to lists", lists_path %>
<%= link_to "Add movie to list", new_list_bookmark_path(@list) %>
<% @list.bookmarks.each do |bookmark| %>
<li>
  <span>
    <%= bookmark.movie.title %>
  </span>
  <p><%= bookmark.comment %></p>
  <span><%= link_to "delete from list", bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></span>
</li>
<% end %>
