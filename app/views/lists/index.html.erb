<div class="hero">
  <h1>Tom's movie lists</h1>
  <p class="hero-scroll">
    Easily create categories for your favourite movies!
  </p>
</div>

<%# list all lists %>
<%= link_to "Create new list", new_list_path %>

<div class="cards-container">
  <% @lists.each do |list| %>
  <%= link_to list_path(list) do %>
  <div class="card">
    <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
    <span><%= list.name %></span>
    </div>
    <% end %>
  <% end %>
</div>

